<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_image_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="20dp">

        <ImageView
            android:id="@+id/iv_invite_icon"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/ic_game_invite"
            android:scaleType="fitCenter" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_invite_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_image_container"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="15dp"
        android:fontFamily="@font/brandon_text_medium"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

</RelativeLayout>